extends ../layouts/main-layout.pug 

block content 
    if orders.length > 0
        div(class="accordion" id="accordionExample")
            each order in orders
                div(class="accordion-item")
                    h2(class="accordion-header")
                    button(class="accordion-button collapsed", type="button", data-bs-toggle="collapse", data-bs-target="#collapse" + order._id,  aria-expanded="true", aria-controls="collapse" + order._id)
                        Accordion Order â„– #{order._id}
                    div(id="collapse" + order._id, class="accordion-collapse collapse" data-bs-parent="#accordionExample")
                        div(class="accordion-body")
                            each item in order.items
                                h5 
                                    | #{item.product.title} 
                                    span(class="badge bg-secondary") #{item.quantity}
     
    else 
        div(class="") There are no orders yet


    