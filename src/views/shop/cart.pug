extends ../layouts/main-layout.pug 

block content 
    if items.length > 0
        div(class="container-fluid d-flex justify-content-center")
            div(class="w-50")
                table(class="table table-hover ")
                    thead(class="")
                        tr
                            th(class="") Title
                            th(class="") Price
                            th(class="") Quantity
                            th(class="") Total price
                            th(class="")
                    tbody 
                        each item in items
                            tr(class="")
                                th(class="") #{item.product.title}
                                td(class="") $#{item.product.price}
                                td(class="") #{item.quantity}
                                td(class="") $#{(item.quantity * item.product.price).toFixed(2)}
                                td(class="") 
                                    form(action="/cart-remove-item" method="POST", class="")
                                        input(type="hidden", name="id", value=item.product._id)
                                        input(type="hidden", name="_csrf", value=csrfToken)
                                        button(type="submit", class="btn btn-danger btn-sm") Remove 
                div(class="d-flex justify-content-end")
                    form(action="/create-order", method="post") 
                        input(type="hidden", name="_csrf", value=csrfToken)
                        button(type="submit", class="btn btn-primary") Buy

    else 
        div(class="") There are no items yet