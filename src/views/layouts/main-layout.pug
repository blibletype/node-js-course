doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
        link(rel="stylesheet", href="/css/styles.css")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous")
    body
        header
            nav(class="container-fluid")
                div(class="d-flex justify-content-between mx-2")
                    ul(class="nav nav-underline")
                        li(class="nav-item")
                            a(href="/", class="nav-link " + (path === "/" ? "active":"")) Home
                        li(class="nav-item")
                            a(href="/products", class="nav-link " + (path === "/products" ? "active":"")) Products
                        if isAuth
                            li(class="nav-item")
                                a(href="/cart", class="nav-link " + (path === "/cart" ? "active":"")) Cart
                            li(class="nav-item")
                                a(href="/orders", class="nav-link " + (path === "/orders" ? "active":"")) Orders   
                    ul(class="nav nav-underline")
                        if isAuth
                            li(class="nav-item")
                                a(href="/admin/add-product", class="nav-link " + (path === "/admin/add-product" ? "active":"")) Add product
                            li(class='nav-item')
                                a(href="/admin/products", class="nav-link " + (path === "/admin/products" ? "active":"")) Admin products
                            form(action="/signout", method="post", class="nav-item") 
                                input(type="hidden", name="_csrf", value=csrfToken)
                                button(type="submit", class="nav-link") Sign Out
                        else
                            li(class="nav-item")
                                a(href="/signin", class="nav-link " + (path === "/signin" ? "active":"")) Sign In
                            li(class="nav-item")
                                a(href="/signup", class="nav-link " + (path === "/signup" ? "active":"")) Sign Up
        main(class="mx-2 mt-3")
            hr          
            block content
            
        script(src="/js/main.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous")