extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/main.css")
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        form.product-form(action=(editing === "true" ? "/admin/edit-product" : "/admin/add-product"), method="POST")
            .form-control
                label(for="title") Title
                input(type="text", name="title", id="title", value=(editing === "true" ? product.title : ""))
            .form-control
                label(for="title") Price
                input(type="number" name="price" id="price" step="0.01", value=(editing === "true" ? product.price : ""))
            .form-control
                label(for="title") Image Url
                input(type="text", name="imageUrl", id="imageUrl", value=(editing === "true" ? product.imageUrl : ""))
            .form-control
                label(for="title") Description
                textarea(name="description", id="description", rows="5") #{editing === "true" ? product.description : ""}
            if editing === "true"
                input(type="hidden", value=(product.id), name="id") 
            button.btn(type="submit") #{editing === "true" ? "Update Product" : "Add Product"}  
            

        