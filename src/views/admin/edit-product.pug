extends ../layouts/main-layout.pug

block content
    div(class='w-full flex justify-center mt-6')
        form(action=(editing === "true" ? "/admin/edit-product" : "/admin/add-product"), method="POST", class='w-full max-w-sm')
            div(class='md:flex md:items-center mb-6')
                div(class='md:w-1/3')
                    label(for="title", class='block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4') Title
                div(class='md:w-2/3')
                    input(type="text", name="title", id="title", value=(editing === "true" ? product.title : ""), class='bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500')
            div(class='md:flex md:items-center mb-6')
                div(class='md:w-1/3')
                    label(for="title", class='block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4') Price
                div(class='md:w-2/3')
                    input(type="number" name="price" id="price" step="0.01", value=(editing === "true" ? product.price : ""), class='bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500')
            div(class='md:flex md:items-center mb-6')
                div(class='md:w-1/3')
                    label(for="title", class='block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4') Image Url
                div(class='md:w-2/3')
                    input(type="text", name="imageUrl", id="imageUrl", value=(editing === "true" ? product.imageUrl : ""), class='bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500')
            div(class='md:flex md:items-center mb-6')
                div(class='md:w-1/3')
                    label(for="title", class='block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4') Description
                div(class='md:w-2/3')
                    textarea(name="description", id="description", rows="5", class='bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500') #{editing === "true" ? product.description : ""}
            if editing === "true"
                input(type="hidden", value=(product._id), name="id") 
            div(class='w-full flex justify-end')
                button(type="submit", class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded") #{editing === "true" ? "Update Product" : "Add Product"}  
            

        