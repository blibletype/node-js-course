nav
    ul(class="pagination justify-content-center")
        if currentPage !== 1
            li(class="page-item")
                a(class="page-link" href="?page=1") 1
        if hasPreviousPage && previousPage !== 1
            li(class="page-item")
                a(class="page-link" href=`?page=${previousPage}`) #{previousPage}
        li(class="page-item")
            a(class="page-link active" href=`?page=${currentPage}`) #{currentPage}
        if hasNextPage
            li(class="page-item")
                a(class="page-link" href=`?page=${nextPage}`) #{nextPage}
        if currentPage !== lastPage && nextPage !== lastPage
            li(class="page-item")
                a(class="page-link" href=`?page=${lastPage}`) #{lastPage}